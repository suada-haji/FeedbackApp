<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_land"
    android:orientation="vertical"
    tools:context="com.mobile.suadahaji.feedbackapplication.RateActivity">
    <TextView
        android:id="@+id/tv_food_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_was_lunch"
        android:textSize="64sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/margin_120"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20">

        <RadioButton
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/good_tab"
            android:checked="false" />

        <RadioButton
            android:id="@+id/average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/average_tab"
            android:checked="false"
            android:layout_marginRight="@dimen/margin_120"
            android:layout_marginLeft="@dimen/margin_120"/>

        <RadioButton
            android:id="@+id/bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/sad_tab"
            android:checked="false" />
    </RadioGroup>
</RelativeLayout>
