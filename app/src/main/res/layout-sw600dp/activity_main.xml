<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    android:fitsSystemWindows="true"
    tools:context="com.example.suadahaji.feedbackapplication.MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/view_transparent"
        android:layout_marginRight="@dimen/margin_45"
        android:layout_marginLeft="@dimen/margin_45"
        android:elevation="@dimen/margin_15">
        <ImageView
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kindly submit review:"
            android:textSize="@dimen/text_30"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_40">
            <Button
                android:id="@+id/btn_breakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/submit_bg"
                android:text="Breakfast"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_20"
                android:layout_marginLeft="15dp"/>
            <Button
                android:id="@+id/btn_lunch"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_transparent"
                android:text="Lunch"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_20"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
